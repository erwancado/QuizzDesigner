{% extends 'base.html.twig' %}

{% block title %}Créez votre Quizz!{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <div class="row">
        <h1 class="col-6">Nouveau Quizz</h1>
        <div class="col-6 text-center">
            <button type="button" class="btn btn-outline-success" id="newQuestion"><i class="fas fa-plus"></i> Question</button>
        </div>
    </div>

    <hr>
    <div class="container">
        <form method="post" action="" id="quizz">
            <input type="submit" class="btn btn-outline-success" value="Créer le quizz">
        <div id="question1" class="questionCard">

            <div class="jumbotron jumbotron-fluid" id="jumbotronQ1">
                <div class="container">
                        <div class="row">
                            <input type="text" placeholder="Question" class="col-6" name="QuestionText1">
                            <div class="col-6">
                                <label for="difficulte">Difficulté</label>
                                <input id="difficulte" type="number" placeholder="Difficulté" class="col-6" min="0" max="10" name="QuestionDifficulty1">
                            </div>
                            <div class="text-right">
                                <button type="button" class="btn btn-outline-danger">Supprimer</button>
                            </div>
                        </div>

                </div>
            </div>
        </div>

        </form>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent ()}}
{{ encore_entry_script_tags('create_quizz_page')}}
{% endblock %}
