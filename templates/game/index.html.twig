{% extends 'base.html.twig' %}

{% block title %} {{ quizz.nom }} {% endblock %}
{% block header %} {{ parent() }} {% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%;}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">

    <div class="head row">
        <a class="back" href="{{ path('home_page') }}"><i class="fas fa-arrow-circle-left" style="font-size: 50px"></i></a>
        <div class="container">
            <div class="row">
                <h1 class="title col-8">{{ quizz.nom }}</h1>
            </div>
        </div>
    </div>
    <!-- Card -->
    <div class="card">

        <!-- Card image -->
        <div class="view overlay">
            <img class="card-img-top" src="https://mdbootstrap.com/img/Mockups/Lightbox/Thumbnail/img%20(67).jpg"
                 alt="Card image cap">
            <a href="#!">
                <div class="mask rgba-white-slight"></div>
            </a>
        </div>

        <!-- Card content -->
        <div class="card-body">

            <!-- Title -->
            <h4 class="card-title">Card title</h4>
            <!-- Text -->
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>
            <!-- Button -->
            <a href="#" class="btn btn-primary">Button</a>

        </div>

    </div>
    <!-- Card -->
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}