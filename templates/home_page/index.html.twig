{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block header %} {{ parent() }} {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div>
        <h1>Bienvenue dans Quizz Designer</h1>
        <h3>Voici la liste des quizz disponibles</h3>

        <div class="container quizzList">
            <div class="row">
                {% for quizz in quizzList %}
                    <div class="col-md-4">
                        <div class="card quizzCard">
                            <div class="card-header">
                                <h4 class="card-title text-center">{{ quizz.nom}}</h4>
                            </div>
                            <div class="card-body">
                                <p class="card-text">Questions : {{quizz.nbquestion}}</p>
                                <p class="card-text">Difficult√© : {{quizz.difficulte}}</p>

                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
